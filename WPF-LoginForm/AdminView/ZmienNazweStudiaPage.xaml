<UserControl x:Class="WPF_LoginForm.AdminView.ZmienNazweStudiaPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_LoginForm.AdminView"
             mc:Ignorable="d" 
             d:DesignHeight="460" d:DesignWidth="600">
    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" Margin="0 50 0 0">
            <TextBlock Text="Obecna Nazwa Studia:" FontSize="40"></TextBlock>
            <TextBlock Text="Super Studio" HorizontalAlignment="Center" FontSize="30"></TextBlock>
            <TextBlock Text="Nowa nazwa: " FontSize="40"></TextBlock>
            <TextBox FontSize="40" Height="50" Width="300"></TextBox>
            <Button Content="Zmień" FontWeight="Bold" Background="#E91E63" Height="30" Foreground="White" ></Button>
        </StackPanel>
    </Grid>
</UserControl>
