<UserControl x:Class="WPF_LoginForm.AlbumItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_LoginForm"
             mc:Ignorable="d" 
             d:DesignHeight="275" d:DesignWidth="200">
    <Border Background="White" Padding="0.5">
        <Grid Background="#333">
            <StackPanel HorizontalAlignment="Center">
                <Image Source="{Binding Image}" Stretch="Fill" Margin="5 5 5 5"></Image>
                <TextBlock Text="{Binding Album}" FontSize="18" Foreground="White" HorizontalAlignment="Center" Margin="5 5 0 0"></TextBlock>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" TextBlock.FontSize="13">
                    <TextBlock Text="Artist: " Foreground="White"></TextBlock>
                    <TextBlock Text="{Binding Wykonawca}" HorizontalAlignment="Center" Foreground="White"></TextBlock>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
